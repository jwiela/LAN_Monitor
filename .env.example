# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=change-this-to-random-secret-key-in-production

# Database (zostaw puste aby użyć domyślnej ścieżki z config.py)
# DATABASE_URI=

# InfluxDB Configuration (optional - uncomment to enable)
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your-token-here
# INFLUXDB_ORG=lan-monitor
# INFLUXDB_BUCKET=network-metrics

# Network Configuration
NETWORK_INTERFACE=eth0
SCAN_INTERVAL=300

# Email Configuration (for alerts)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
ALERT_EMAIL=admin@example.com

# Admin Account (default credentials)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
